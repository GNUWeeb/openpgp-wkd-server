{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "node16",
        "lib": ["ES2022"],
        "strict": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": false, // https://github.com/microsoft/TypeScript/issues/53286#issuecomment-1500634952
        "skipLibCheck": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "resolveJsonModule": false, // Node.js ESM doesn't support JSON (yet)
        "typeRoots": ["node_modules/@types", "src/typings"]
    },
    "exclude": [],
    "include": ["src/**/*"]
}